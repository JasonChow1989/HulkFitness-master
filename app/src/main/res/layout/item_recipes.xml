<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/news_summary_card_view"
    app:cardElevation="2dp">


    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/dayNightBackground"
        app:dayNightBackgroundAttr="dayNightBackground">

        <ImageView
            android:id="@+id/id_item_recips_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/item_margin"
            android:scaleType="centerCrop"
            android:transitionName="@string/transition_photos"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/id_item_recips_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/id_item_recips_img"
            android:layout_toEndOf="@+id/id_item_recips_img"
            android:layout_toRightOf="@+id/id_item_recips_img"
            android:paddingLeft="10dp"
            android:textColor="@color/alpha_90_black"
            android:textSize="@dimen/font_normal2"
            tools:text="健身好食谱" />

        <TextView
            android:id="@+id/id_item_recips_energy"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/id_item_recips_title"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/id_item_recips_img"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?attr/dayNightTwoTextColor"
            android:textSize="@dimen/font_small"
            tools:text="1000千卡" />

        <TextView
            android:id="@+id/id_item_recips_dsc"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/id_item_recips_energy"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/id_item_recips_img"
            android:ellipsize="end"
            android:lines="2"
            android:paddingLeft="10dp"
            android:textColor="?attr/dayNightOneTextColor"
            android:textSize="@dimen/font_small"
            tools:text="习近平:吹响建设科技强国号角国号角国号角" />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:layout_below="@+id/id_item_recips_dsc"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/id_item_recips_img"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/id_item_recips_foodtag1"
                android:layout_width="30dp"
                android:layout_height="13dp"
                android:layout_alignParentBottom="true"
                android:background="@color/main_color"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/id_item_recips_foodtag2"
                android:layout_width="30dp"
                android:layout_height="13dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/id_item_recips_foodtag1"
                android:background="@color/main_color"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>