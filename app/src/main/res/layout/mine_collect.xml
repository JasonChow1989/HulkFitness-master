<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="20dp"
        android:background="#555555">

        <ImageView
            android:id="@+id/iv_collect_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_back" />

        <RadioGroup
            android:id="@+id/rg_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_recipe"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/radiobutton_bg"
                android:button="@null"
                android:gravity="center"
                android:text="食谱"
                android:checked="true"
                android:textColor="@color/radiobutton_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_article"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/radiobutton_bg"
                android:button="@null"
                android:gravity="center"
                android:text="文章"
                android:textColor="@color/radiobutton_color"
                android:textSize="14sp" />

        </RadioGroup>
    </FrameLayout>

   <android.support.v4.view.ViewPager
       android:id="@+id/vp_collect"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

   </android.support.v4.view.ViewPager>
</LinearLayout>