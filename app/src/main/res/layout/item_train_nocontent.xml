<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_train_nocontent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alpha_50_black"
    android:orientation="vertical">

    <include layout="@layout/layout_headerview_train" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alpha_50_black"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="这里有全面有效的训练视频"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="资深教练+详细讲解\n你可以根据自身情况挑选课程"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <include layout="@layout/layout_footbutton_train" />
</LinearLayout>