<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/include_cook_step"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:id="@+id/id_include_cook_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_include_cook_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:padding="10dp"
            android:text="步骤 1:"
            android:textColor="@color/text_color"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/id_include_cook_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/id_include_cook_step"
            android:gravity="left|center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/id_include_cook_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_include_cook_img"
            android:gravity="left|center"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="12dp"
            android:text="牛油果、黄瓜、芒果切丁"
            android:textColor="@color/text_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/id_include_cook_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/id_include_cook_rl"
        android:background="@color/alpha_15_black" />
</RelativeLayout>