<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_shape_gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:padding="12dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="进一步完善资料"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="跳过"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@mipmap/me_ico_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:text="更换头像"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_jiben_bt_selector"
        android:gravity="center"
        android:hint="输入昵称"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="身高"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/id_jiben_tall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="175"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="cm"
                android:textColor="@color/white" />
        </LinearLayout>

        <com.ggx.ruler_lib.RulerView
            android:id="@+id/rv1"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:defaultValue="160"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="13dp"
            app:direction="horizontal"
            app:endValue="250"
            android:layout_centerInParent="true"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="体重"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/id_jiben_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="170"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="kg"
                android:textColor="@color/white" />
        </LinearLayout>

        <com.ggx.ruler_lib.RulerView2
            android:id="@+id/rv2"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:defaultValue="50"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="13dp"
            app:direction="horizontal"
            app:endValue="300"
            android:layout_centerInParent="true"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_jinen_4"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_jiben4_bt_selector"
        android:text="OK,去训练"
        android:textColor="@color/main_color"
        android:textSize="17sp" />

</LinearLayout>